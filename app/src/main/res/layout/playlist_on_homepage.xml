<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgViewBackgroundPlaylist"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/imgViewPlaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/imgViewBackgroundPlaylist"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/txtViewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/imgViewPlaylist"
        android:layout_alignBottom="@+id/imgViewPlaylist"
        android:maxLines="1"
        android:text="HELLO WORLD"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

</RelativeLayout>